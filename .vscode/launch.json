{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "glTF generate",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/gltfdemo/generate.py",
            "console": "integratedTerminal",
            "args": [
                "--gltf-dir", "${workspaceFolder}/../glTFSample/media/Cauldron-Media",
                "--out-dir", "${workspaceFolder}/../metashade-out"
            ]
        },
        {
            "name": "glTF generate and compile",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/gltfdemo/generate.py",
            "console": "integratedTerminal",
            "args": [
                "--gltf-dir", "${workspaceFolder}/../glTFSample/media/Cauldron-Media",
                "--out-dir", "${workspaceFolder}/../metashade-out",
                "--compile"
            ]
        },
        {
            "name": "glTF generate and cross-compile to GLSL",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/gltfdemo/generate.py",
            "console": "integratedTerminal",
            "args": [
                "--gltf-dir", "${workspaceFolder}/../glTFSample/media/Cauldron-Media",
                "--out-dir", "${workspaceFolder}/../metashade-out",
                "--compile",
                "--to-glsl"
            ]
        },
        {
            "name": "glTF usage",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/gltfdemo/generate.py",
            "console": "integratedTerminal",
            "args": ["--help"]
        },
        {
            "name": "Python: Test debug config",
            "type": "python",
            "request": "test",
            "console": "integratedTerminal",
            "logToFile": true
        }
    ]
}